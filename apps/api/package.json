{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "directory": "dist",
    "linkDirectory": true
  },
  "files": ["dist"],
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org scarlette-ai --project node-nestjs ./dist && sentry-cli sourcemaps upload --org scarlette-ai --project node-nestjs ./dist"
  },
  "dependencies": {
    "@common/api": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.1.3",
    "@sentry/cli": "^2.43.0",
    "@sentry/nestjs": "^9.12.0",
    "@sentry/node": "^9.12.0",
    "dotenv": "^16.5.0",
    "fs": "0.0.1-security",
    "nestjs-pino": "^4.4.0",
    "pino-abstract-transport": "^2.0.0",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@common/jest-config": "workspace:*",
    "@common/typescript-config": "workspace:*",
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.5.4"
  }
}
